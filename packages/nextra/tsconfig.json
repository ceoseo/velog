{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["es2022", "dom"],
    "types": ["vitest/globals", "webpack-env"],
    "resolveJsonModule": true,
    "outDir": "./dist"
  }
}
