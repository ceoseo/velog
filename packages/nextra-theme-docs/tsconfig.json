{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "paths": {
      // fixes incorrect types for flexsearch https://github.com/nextapps-de/flexsearch/issues/392#issuecomment-1552286514
      "flexsearch": ["./node_modules/@types/flexsearch"]
    }
  },
  "include": [
    "./eslint.config.js",
    "./src",
    "./css",
    "./postcss.config.js",
    "./tailwind.config.js",
    "./tsup.config.ts",
    "./vite.config.ts"
  ],
  "exclude": ["node_modules", "dist", "./style.css"]
}
