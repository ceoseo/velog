{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./scripts", ".eslintrc.cjs", "./lib", "./env", "./data", "index.mts"],
  "exclude": ["./dist"],
  "ts-node": {
    "transpileOnly": true
  }
}
