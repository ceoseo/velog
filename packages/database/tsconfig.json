{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "lib": ["ES2022"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [".eslintrc.cjs", "./src", "./scripts/**.mts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  }
}
