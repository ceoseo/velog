{
  "name": "velog",
  "version": "3.0.0",
  "description": "Velog is a blog platform for developers.",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "format": "pnpm format --write .",
    "precommit": "lint-staged",
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "prisma:init": "pnpm -r prisma:copy && pnpm -r prisma:generate"
  },
  "engines": {
    "node": ">=18.16",
    "pnpm": ">=7.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "velopert",
    "email": "public.velopert@gmail.com"
  },
  "keywords": [
    "velog",
    "blog"
  ],
  "dependencies": {
    "husky": "^8.0.0"
  },
  "devDependencies": {
    "lint-staged": "^13.2.3",
    "pnpm": "^8.15.5"
  }
}
