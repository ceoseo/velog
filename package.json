{
  "name": "velog",
  "version": "3.0.0",
  "description": "Velog is a blog platform for developers.",
  "private": true,
  "scripts": {
    "format": "pnpm prettier --write \"**/*.{ts,tsx,md}\"",
    "precommit": "lint-staged",
    "dev": "pnpm -r dev",
    "build": "turbo build",
    "lint": "pnpm -r lint",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "prisma:init": "pnpm -r prisma:generate"
  },
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.15.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "type": "module",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "author": {
    "name": "velopert",
    "email": "public.velopert@gmail.com"
  },
  "keywords": [
    "velog",
    "blog"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@packages/eslint-config": "workspace:*",
    "@packages/tsconfig": "workspace:*",
    "eslint": "^9.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.2.5"
  }
}
